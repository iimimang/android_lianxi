package com.shangxiang.android.activity;

import com.shangxiang.android.R;
import com.shangxiang.android.BaseFragment;

import android.annotation.SuppressLint;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.Button;
import android.widget.LinearLayout;

public class PaidOrder extends BaseFragment {
	private Button buttonBack;
	private Button buttonShowOrder;
	private Button buttonShareto;
	private LinearLayout layoutShareto;
	private Bundle bundle;

	@SuppressLint("InflateParams")
	public View onCreateView(LayoutInflater inflater, ViewGroup container, Bundle sinha) {
		View view = inflater.inflate(R.layout.paid_order, null);
		
		this.bundle = getArguments();

		this.buttonBack = (Button) view.findViewById(R.id.paid_order_record_title_back_button);
		this.buttonBack.setOnClickListener(this);
		this.buttonShowOrder = (Button) view.findViewById(R.id.paid_order_record_show_order_button);
		this.buttonShowOrder.setOnClickListener(this);
		this.buttonShareto = (Button) view.findViewById(R.id.paid_order_record_shareto_button);
		this.buttonShareto.setOnClickListener(this);
		this.layoutShareto = (LinearLayout) view.findViewById(R.id.paid_order_record_shareto_layout);
		this.layoutShareto.setOnClickListener(this);

		if (null != this.bundle) {
		}
		
		return view;
	}

	public void onActivityCreated(Bundle sinha) {
		super.onActivityCreated(sinha);
	}

	@Override
	public void onClick(View v) {
		if (v == this.buttonBack || v == this.buttonShowOrder) {
			getActivity().onBackPressed();
		}
		if (v == this.buttonShareto) {
			this.layoutShareto.setVisibility(View.VISIBLE);
		}
		if (v == this.layoutShareto) {
			this.layoutShareto.setVisibility(View.GONE);
		}
	}
}