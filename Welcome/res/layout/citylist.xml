<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/one1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/more_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@drawable/back"  
            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="选择城市"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <Button
            android:id="@+id/celender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:background="@drawable/back"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        
        android:orientation="vertical" >
        
        <LinearLayout 
            android:id="@+id/dingweibeijing"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:background="@drawable/wenbenkaung"
        	android:gravity="center">
            <Button 
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:background="@drawable/dingweiicon"
        		/>
            <TextView 
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="30sp"
        		android:text="北京"
        		/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:background="@drawable/wenbenkaung"
        	android:layout_marginTop="10dp"
        	android:visibility="gone">
            <Button 
                android:id="@+id/inland"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_weight="1"
        		android:text="国内"
        		/>
            <Button 
                android:id="@+id/foreign"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_weight="1"
        		android:text="国外"
        		/>
        </LinearLayout>
		<LinearLayout 
		    android:id="@+id/guonei"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:orientation="vertical">
            <TextView 
                android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="省份"
        		android:textSize="22sp"
        		android:background="@drawable/wenbenkaung"
        		android:gravity="center"/>
            <ListView
	            android:id="@+id/diqu_list"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"  
	            android:layout_marginBottom="55dp"
	            android:fadingEdge="none" 
	            android:divider="@drawable/dibianxian1"
	            android:cacheColorHint="#00000000">
	        </ListView>
            <ListView
	            android:id="@+id/diqu_list1"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"  
	            android:layout_marginBottom="50dp"
	            android:fadingEdge="none" 
	            android:divider="@drawable/dibianxian1"
	            android:cacheColorHint="#00000000"
	            android:visibility="gone">
	        </ListView>
        </LinearLayout>
        <LinearLayout 
		    android:id="@+id/guowai"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:visibility="gone">
            <TextView  
                android:layout_width="fill_parent"
        		android:layout_height="30dp"
        		android:text="纽约"
        		android:textSize="18sp"
        		android:gravity="center"/>
            <TextView  
                android:layout_width="fill_parent"
        		android:layout_height="30dp"
        		android:text="首尔"
        		android:textSize="18sp"
        		android:gravity="center"/>
            <TextView  
                android:layout_width="fill_parent"
        		android:layout_height="30dp"
        		android:text="东京"
        		android:textSize="18sp"
        		android:gravity="center"/>
            <TextView  
                android:layout_width="fill_parent"
        		android:layout_height="30dp"
        		android:text="巴黎"
        		android:textSize="18sp"
        		android:gravity="center"/>
            <TextView  
                android:layout_width="fill_parent"
        		android:layout_height="30dp"
        		android:text="伦敦"
        		android:textSize="18sp"
        		android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
	<LinearLayout
	    android:id="@+id/one2"
		        android:layout_width="fill_parent"
		       	android:layout_height="50dp"
		        android:layout_alignParentBottom="true"
		        android:background="#1a1a1a"
		        android:visibility="gone">
    			<Button 
				    android:id="@+id/iamgebutton1"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_1"/>
    			<Button 
				    android:id="@+id/iamgebutton2"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_2"/>
    			<Button 
				    android:id="@+id/iamgebutton3"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_3"/>
    			<Button 
				    android:id="@+id/iamgebutton4"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_4"/>
    			<Button 
				    android:id="@+id/iamgebutton5"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_5"/>
    </LinearLayout>
</RelativeLayout>