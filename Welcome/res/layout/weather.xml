<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/one1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/more_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-20px"
            android:background="@drawable/addthings"
            android:text="返回"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="北京"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <Button
            android:id="@+id/weatheradd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-20px"
            android:background="@drawable/addthings_1"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weatherdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/LinearLayout001"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/todaywendu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="28°"
                android:textColor="#FFFFFF"
                android:textSize="140px" />  

           
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/LinearLayout001"
            android:background="@drawable/fengengxian" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
           	android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/weather1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/q0" />

                <TextView
                    android:id="@+id/difang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:text="湿度19%"
                    android:textColor="#FFFFFF"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="06/03"
                    android:textColor="#FFFFFF"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="  (四月二十五)"
                    android:textColor="#FFFFFF"
                    android:textSize="22px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="16℃~28℃"
                    android:textColor="#FFFFFF"
                    android:textSize="22px" />

                <TextView
                    android:id="@+id/fengxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="东北风2级"
                    android:textColor="#FFFFFF"
                    android:textSize="22px" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
       	android:layout_height="fill_parent"
       	android:layout_marginTop="200dp"
       	android:orientation="vertical">
        <LinearLayout 
	        android:layout_width="fill_parent"
	       	android:layout_height="wrap_content"
	       	android:layout_marginLeft="10dp"
	       	android:layout_marginRight="10dp"
	       	android:orientation="horizontal">
	        <LinearLayout 
		        android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
		       	android:layout_weight="1"
		       	android:background="@drawable/weatherhomepagebackground"
		       	android:layout_marginRight="5dp"
		       	android:gravity="center"
		       	android:orientation="horizontal">
                <LinearLayout 
			        android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:gravity="center"
			       	android:layout_weight="1">
	                <ImageButton 
	                    android:id="@+id/weather2"
	                    android:layout_width="60dp"
			       		android:layout_height="60dp"
			       		android:gravity="center"
			       		android:background="@drawable/q0"/>
			        
			        
			    </LinearLayout>
		        <LinearLayout 
			        android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:layout_weight="1"
			       	android:gravity="center"
			       	android:orientation="vertical">
	                <TextView 
	                    android:id="@+id/date2"
	                    android:layout_width="wrap_content"
			       		android:layout_height="wrap_content"
			       		android:textSize="25dp"
			       		android:textColor="#FFFFFF"
			       		android:text="周二"/>
			        <TextView 
			            android:id="@+id/wendu2"
	                    android:layout_width="wrap_content"
			       		android:layout_height="wrap_content"
			       		android:layout_marginTop="10dp"
			       		android:textSize="16dp"
			       		android:textColor="#FFFFFF"
			       		android:text="16℃~28℃"/>
			        
			    </LinearLayout>
		        
		    </LinearLayout>
	        <LinearLayout 
		        android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
		       	android:layout_weight="1"
		       	android:background="@drawable/weatherhomepagebackground"
		       	android:layout_marginLeft="5dp"
		       	android:gravity="center"
		       	android:orientation="horizontal">
		        <LinearLayout 
			        android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:gravity="center"
			       	android:layout_weight="1">
	                <ImageButton 
	                    android:id="@+id/weather3"
	                    android:layout_width="60dp"
			       		android:layout_height="60dp"
			       		android:gravity="center"
			       		android:background="@drawable/q0"/>
			        
			        
			    </LinearLayout>
		        <LinearLayout 
			        android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:layout_weight="1"
			       	android:gravity="center"
			       	android:orientation="vertical">
	                <TextView 
	                    android:id="@+id/date3"
	                    android:layout_width="wrap_content"
			       		android:layout_height="wrap_content"
			       		android:textSize="25dp"
			       		android:textColor="#FFFFFF"
			       		android:text="周二"/>
			        <TextView 
			            android:id="@+id/wendu3"
	                    android:layout_width="wrap_content"
			       		android:layout_height="wrap_content"
			       		android:layout_marginTop="10dp"
			       		android:textSize="16dp"
			       		android:textColor="#FFFFFF"
			       		android:text="16℃~28℃"/>
			        
			    </LinearLayout>
		        
		    </LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	       	android:layout_height="wrap_content"
	       	android:layout_marginTop="10dp"
	       	android:layout_marginLeft="10dp"
	       	android:layout_marginRight="10dp"
	       	android:gravity="center"
	       	android:orientation="horizontal">
	        <LinearLayout 
		        android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
		       	android:layout_weight="1"
		       	android:background="@drawable/weatherhomepagebackground"
		       	android:layout_marginRight="5dp"
		       	android:gravity="center"
		       	android:orientation="horizontal">
		        <LinearLayout 
			        android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:gravity="center"
			       	android:layout_weight="1">
	                <ImageButton 
	                     android:id="@+id/weather4"
	                    android:layout_width="60dp"
			       		android:layout_height="60dp"
			       		android:gravity="center"
			       		android:background="@drawable/q0"/>
			        
			        
			    </LinearLayout>
		        <LinearLayout 
			        android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:layout_weight="1"
			       	android:gravity="center"
			       	android:orientation="vertical">
	                <TextView 
	                    android:id="@+id/date4"
	                    android:layout_width="wrap_content"
			       		android:layout_height="wrap_content"
			       		android:textSize="25dp"
			       		android:textColor="#FFFFFF"
			       		android:text="周二"/>
			        <TextView 
			            android:id="@+id/wendu4"
	                    android:layout_width="wrap_content"
			       		android:layout_height="wrap_content"
			       		android:layout_marginTop="10dp"
			       		android:textSize="16dp"
			       		android:textColor="#FFFFFF"
			       		android:text="16℃~28℃"/>
			        
			    </LinearLayout>
		        
		    </LinearLayout>
	        <LinearLayout 
		        android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
		       	android:layout_weight="1"
		       	android:background="@drawable/weatherhomepagebackground"
		       	android:layout_marginLeft="5dp"
		       	android:gravity="center"
		       	android:orientation="horizontal">
	        	<LinearLayout 
			        android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:gravity="center"
			       	android:layout_weight="1">
	                <ImageButton 
	                    android:id="@+id/weather5"
	                    android:layout_width="60dp"
			       		android:layout_height="60dp"
			       		android:gravity="center"
			       		android:background="@drawable/q0"/>
			        
			        
			    </LinearLayout>
		        <LinearLayout 
			        android:layout_width="wrap_content"
			       	android:layout_height="wrap_content"
			       	android:layout_weight="1"
			       	android:gravity="center"
			       	android:orientation="vertical">
	                <TextView 
	                    android:id="@+id/date5"
	                    android:layout_width="wrap_content"
			       		android:layout_height="wrap_content"
			       		android:textSize="25dp"
			       		android:textColor="#FFFFFF"
			       		android:text="周二"/>
			        <TextView 
			            android:id="@+id/wendu5"
	                    android:layout_width="wrap_content"
			       		android:layout_height="wrap_content"
			       		android:layout_marginTop="10dp"
			       		android:textSize="16dp"
			       		android:textColor="#FFFFFF"
			       		android:text="16℃~28℃"/>
			        
			    </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
        
        
    </LinearLayout>

</RelativeLayout>