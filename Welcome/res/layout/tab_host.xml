<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="50dp" 
    android:background="@drawable/bottombackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom" >

        <LinearLayout
            android:id="@+id/ll_main_tab0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon1_1"
            android:clickable="true"
            android:gravity="bottom"
            android:paddingBottom="3dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="8dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_tab1"
           android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon1_2"
            android:clickable="true"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="3dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="8dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_tab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon1_3"
            android:clickable="true"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="3dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="8dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_tab3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon1_4"
            android:clickable="true"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="3dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="8dp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_tab4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/icon1_5"
            android:clickable="true"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="3dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="8dp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>