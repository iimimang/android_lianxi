<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/one1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/more_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@drawable/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="搜号码"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <Button
            android:id="@+id/sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:background="@drawable/save"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >
        
        <LinearLayout 
            android:id="@+id/souhaoma"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="15dp"
        	android:orientation="horizontal">
        	
            <Button 
                android:id="@+id/friendtext"
                android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center_vertical"
        		android:gravity="top"
        		android:text="手机号搜索"
        		android:layout_marginLeft="5dp"
        		android:textSize="18sp"
        		android:lines="1"
        		android:background="@null"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/tongxxunlu"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:background="@drawable/wenbenkaung"
        	android:orientation="horizontal">
            <EditText 
                android:id="@+id/friendphone"
                android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center_vertical"
        		android:gravity="top"
        		android:layout_marginLeft="5dp"
        		android:hint="请输入手机号"
        		android:textSize="18sp"
        		android:lines="1"
        		android:numeric="integer"
        		android:phoneNumber="true"
        		android:padding="5dp"
        		android:background="@null"/>
        </LinearLayout>
        
        

    </LinearLayout>
	<LinearLayout
	    android:id="@+id/one2"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:layout_alignParentBottom="true"
		        android:background="@drawable/title"
		        android:visibility="gone">
    			<Button 
				    android:id="@+id/iamgebutton1"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_1"/>
    			<Button 
				    android:id="@+id/iamgebutton2"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_2"/>
    			<Button 
				    android:id="@+id/iamgebutton3"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_3"/>
    			<Button 
				    android:id="@+id/iamgebutton4"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_4"/>
    			<Button 
				    android:id="@+id/iamgebutton5"
				    android:layout_width="wrap_content"
		        	android:layout_height="50dp"
		        	android:layout_weight="1"
		        	android:background="@drawable/icon1_5"/>
    </LinearLayout>
</RelativeLayout>