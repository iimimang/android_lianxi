        android:orientation="horizontal" >

        <Button
            android:id="@+id/more_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@drawable/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="好友"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <Button
            android:id="@+id/sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:background="@drawable/save"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >
        <LinearLayout 
            android:id="@+id/LinearLayout001"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
        	android:background="@drawable/wenbenkaung"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:orientation="horizontal">
        	<ImageButton 
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center_vertical"
        		android:layout_marginLeft="10dp"
        		android:background="@drawable/search_03"/>
            <EditText 
                android:id="@+id/friendtext"
                android:layout_width="160dp"
        		android:layout_height="30dp"
        		android:layout_gravity="center"
        		android:gravity="top"
        		android:layout_weight="1"
        		android:hint="搜索"
        		android:lines="1"
        		android:padding="5dp"
        		android:background="@null"/>
            <Button 
                android:id="@+id/addfriend"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:background="@drawable/friendlist"
                />
        </LinearLayout>
        <ListView 
	        android:id="@+id/findshare11"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:cacheColorHint="#00000000"
	        android:divider="@null"
	        android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp">
	    </ListView>
