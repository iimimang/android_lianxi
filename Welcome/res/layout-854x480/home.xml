<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/homepage1">
	
    <RelativeLayout
        android:id="@+id/weatherdetail1"
        android:layout_width="match_parent"
        android:layout_height="200dp" >
        <com.netbook.snow.SnowView
        android:id="@+id/snow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:visibility="invisible"/>
		<ImageView
        android:id="@+id/loadingBtn"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginLeft="-250dp"
        android:layout_marginTop="-200dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/sun" 
        android:layout_marginRight="20dp"   
        android:visibility="gone" >
    </ImageView>
    
    <ImageView
        android:id="@+id/sun"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/w0"
          android:visibility="gone"      
         />
     <ImageView
        android:id="@+id/cloud"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cloud"
         android:visibility="gone"/>
     <ImageView
        android:id="@+id/cloud_out"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_marginLeft="-200dp"
        android:layout_height="100dp"
        android:background="@drawable/cloud"
         android:visibility="gone"/>
     <ImageView
        android:id="@+id/bigcloud"
        android:layout_marginTop="15dp"
        android:layout_width="400dp"
        android:layout_centerHorizontal="true"
        android:layout_height="150dp"
        android:background="@drawable/blackcloud" 
        android:visibility="gone"/> 
        <LinearLayout
            android:id="@+id/LinearLayout001"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/todaywendu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="28°"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="130px" />

            <TextView
                android:id="@+id/shidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="湿度19%"
                android:textColor="#93d2fa"
                android:textSize="14sp" 
                android:visibility="invisible"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/LinearLayout001"
            android:background="@drawable/fengengxian" 
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/weather_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/q0" />

                <TextView
                    android:id="@+id/difang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="北京"
                    android:textColor="#000000"
                    android:textSize="50px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="06/03"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="  (四月二十五)"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="16℃-"
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/wendu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="28℃"
                    android:textColor="#93d2fa"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fengxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="东北风2级"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/LinearLayout001"
            android:layout_marginTop="-30dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/date111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周三"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/weather_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q0" />

                <TextView
                    android:id="@+id/wendu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16℃-28℃"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView
                     android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周四"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/weather_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q0" />

                <TextView
                    android:id="@+id/wendu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16℃-28℃"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView
                     android:id="@+id/date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周五"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/weather_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q0" />

                <TextView
                    android:id="@+id/wendu4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16℃-28℃"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" >
                <TextView
                     android:id="@+id/date4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周六"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/weather_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q0" />

                <TextView
                    android:id="@+id/wendu5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16℃-28℃"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
            
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/chuanyubackgroud" >

        <LinearLayout
            android:id="@+id/eventlist"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/myaboutmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
			<TextView
                android:id="@+id/name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="14sp" 
                android:ellipsize="end"
                android:lines="1"
                android:visibility="gone"/>
			<TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" 
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/youjiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/youjiantou" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/eventlist1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventlist"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/dibianxian" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/eventlist1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shijianlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="事件列表"
                android:textSize="20sp"
                android:visibility="gone" />

            <ListView
                android:id="@+id/findshare_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:listSelector="@drawable/touming"
                android:divider="@drawable/dibianxian1" >
            </ListView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>