<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bj3"
    android:orientation="horizontal"
    >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bj3" >

        <ImageView
            android:id="@+id/business_list_Logo"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/business_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/business_list_Logo"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp" 
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/business_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/business_list_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/business_list_Logo"
            android:text="地址:"
            android:textColor="@color/gray"
            android:textSize="16sp" 
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/business_list_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/business_list_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/business_list_address"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/business_list_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/business_list_address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/business_list_Logo"
            android:text="电话:"
            android:textColor="@color/gray"
            android:textSize="16sp" />
        
         <TextView
            android:id="@+id/business_list_tel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/business_list_address1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/business_list_tel"
            android:textColor="@color/gray"
            android:textSize="16sp" />
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/arrow_right"
		   	android:layout_alignParentRight="true"
		   	android:layout_centerVertical="true"
		  	/>
    </RelativeLayout>
    
</LinearLayout>