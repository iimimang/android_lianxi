<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" 
        android:background="@drawable/bj">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:background="@drawable/bottom_bg" 
            android:paddingTop="3dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/radio_select0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_btn_select" 
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/radio_select1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_btn_select" 
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/radio_select2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_btn_select" 
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/radio_select3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_btn_select" 
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/radio_select4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_btn_select" 
                    android:visibility="invisible"/>
            </LinearLayout>
            <RadioGroup
                android:id="@+id/main_radio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_button0"
                    style="@style/main_tab_bottom"
                    android:checked="true" 
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/bottom_btn1"
                	android:text="首页" />

                <RadioButton
                    android:id="@+id/radio_button1"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/bottom_btn2"
                    android:text="新闻"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <RadioButton
                    android:id="@+id/radio_button2"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/bottom_btn3"
                    android:text="产品"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <RadioButton
                    android:id="@+id/radio_button3"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/bottom_btn4"
                    android:text="企业"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <RadioButton
                    android:id="@+id/radio_button4"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/bottom_btn5"
                    android:text="更多"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

</TabHost>